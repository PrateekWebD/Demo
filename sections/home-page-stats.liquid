<!-- section -->
        <div class="section stats">
          <div class="container">
            <div class="box">
              <div class="row">
              	<div class="col-md-6 column mb-md-0">
                  <div class="inner-wrapper">
                {% for block in section.blocks %}
                  {% case block.type %}
                    {% when 'value' %}
                       <span class="values">{{ block.settings.percent }}%</span>
                   {% endcase %}
                {% endfor %}
                    
                {% for block in section.blocks %}
                  {% case block.type %}
                    {% when 'text' %}
                            {{ block.settings.content }}
                  {% endcase %}
                {% endfor %}
				    </div>
                 </div>
              </div>
            </div>
          </div>
        </div>
<!-- /section -->

{% schema %}
  {
    "name": "Stats",
 
	"blocks": [
		{
			"name": "value",
			"type": "value",
			"settings": [
				{
					"id": "percent",
					"type": "number",
					"label": "Percent"
				}
			]
			
		},
		{
			"name": "text",
			"type": "text",
			"settings": [
				{
					"id": "content",
					"type": "richtext",
					"label": "Content"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Stats",
			"blocks": [
				{
					"type": "value"
				},
				{
					"type": "text"
				}
			]
		}
	]
  }
{% endschema %}
