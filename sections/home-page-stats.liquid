<!-- section -->
        <div class="section stats">
          <div class="container">
            <div class="box">
              <div class="row">
                
                {% for block in section.blocks %}
                  {% case block.type %}
                    {% when 'stat-box' %}
                      
                        <div class="col-md-6 column mb-md-0">
                          <div class="inner-wrapper">
                            <span class="values">{{ block.percent }}%</span>
                            <p>Growth in global aquaculture production from 2009 to 2019<br> - FAO</p>
                          </div>
                        </div>
                      
                  {% endcase %}
                {% endfor %}

               
               
              </div>
            </div>
          </div>
        </div>
<!-- /section -->

{% schema %}
  {
    "name": "Stats",
 
	"blocks": [
		{
			"name": "Stat",
			"type": "stat-box",
			"settings": [
				{
					"id": "percent",
					"type": "number",
					"label": "Percent"
				},
				{
					"id": "content",
					"type": "textarea",
					"label": "Content"
				}
			]
			
		}
	],
	"presets": [
		{
			"name": "Stats"
		}
	]
  }
{% endschema %}
