<!-- section -->
        <div class="section stats pb-3">
          <div class="container">
            <div class="box">
              <div class="row">
                {% for block in section.blocks %}
                  {% case block.type %}
                	{% when 'stat' %}
                      <div class="col-md-4 column mb-md-0">
                        <div class="inner-wrapper">
                          <span class="values">{{ block.settings.value }}</span>
                          {{ block.settings.content }}
                        </div>
                      </div>
             	  {% endcase %}
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
<!-- /section -->



{% schema %}
  {
    "name": "Sustainable Stats",
    "settings": [],
	"blocks": [
		{
			"name": "Stats",
			"type": "stat",
			"settings": [
				{
					"id": "value",		
					"type": "text",
					"label": "Value"
				},
				{
					"id": "content",		
					"type": "richtext",
					"label": "Content"
				}
			]
		}
	],
	"presets": [
		{
			"name": "Sustainable Stats"
		}
	],
	"templates": ["page"]
  }
{% endschema %}