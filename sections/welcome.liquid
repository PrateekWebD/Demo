<!-- section -->
        <div class="section pb-lg-5">
          <div class="container text-center">
            <header class="mb-4 pb-lg-1">
            {% for block in section.blocks %}
             {% case block.type %}
              {% when 'heading' %}
                  <h2 class="text-primary">{{ block.settings.heading }}</h2>
              {% endcase %}
            {% endfor %}
            </header>
            
            {% for block in section.blocks %}
             {% case block.type %}
              {% when 'text' %}
                <div class="px-xl-4">
                  {{ block.settings.text }}
             {% endcase %}
            {% endfor %}
                  
                  
            {% for block in section.blocks %}
             {% case block.type %}
               {% when 'buttons' %}
                  <a href="#" class="btn btn-outline-primary">{{ block.settings.button }}</a>
             {% endcase %} 
            {% endfor %}
              </div>
          </div>
        </div>
<!-- /section -->



